<% layout('layouts/base') %>


<form action="<%= rotas.USUARIOS_CADASTRAR %>" method="POST" id="form-cadastro" style="display: none;">
  <div>
    <label for="nome">Nome do Usuário</label>
    <input type="text" id="nome" name="nome" required />
  </div>
  <div>
    <label for="email">E-mail</label>
    <input type="email" id="email" name="email" required />
  </div>
  <div>
    <label for="senha">Senha</label>
    <input type="password" id="senha" name="senha" required />
  </div>
  <div>
    <label for="cpf">CPF</label>
    <input type="text" id="cpf" name="cpf" required />
  </div>
  <button type="submit">Cadastrar Usuário</button>
</form>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% dados.forEach((item) => { %>
      <tr>
        <td><%= item.usuario_nome %></td>
        <td><%= item.usuario_cpf %></td>
        <td><%= item.usuario_email %></td>
        <td>
          <form method="POST"
                action="<%= rotas.EXCLUIR
                  .replace(':tabela', 'usuarios')
                  .replace(':pk', 'usuario_id')
                  .replace(':id', item.usuario_id) %>"
                style="display: inline;">
            <button type="submit" class="button-excluir-sm">
              Excluir
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
