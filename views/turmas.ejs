<% layout('layouts/base') %>


<form action="<%= rotas.TURMAS_CADASTRAR %>" method="POST" id="form-cadastro" style="display: none;">
  <div>
    <label for="turma_nome">Nome da Turma</label>
    <input type="text" id="turma_nome" name="turma_nome" maxlength="50" required />
  </div>
  <div>
    <label for="turma_ano_letivo">Ano Letivo</label>
    <input type="number" id="turma_ano_letivo" name="turma_ano_letivo" required />
  </div>
  <div>
    <label for="turma_semestre">Semestre</label>
    <input type="number" id="turma_semestre" name="turma_semestre" required />
  </div>
  <button type="submit">Cadastrar Turma</button>
</form>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome da Turma</th>
      <th>Ano Letivo</th>
      <th>Semestre</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% dados.forEach((item) => { %>
      <tr>
        <td><%= item.turma_id %></td>
        <td><%= item.turma_nome %></td>
        <td><%= item.turma_ano_letivo %></td>
        <td><%= item.turma_semestre %></td>
        <td>
          <form method="POST"
                action="<%= rotas.EXCLUIR
                  .replace(':tabela', 'turmas')
                  .replace(':pk', 'turma_id')
                  .replace(':id', item.turma_id) %>"
                style="display: inline;">
            <button type="submit" class="button-excluir-sm">
              Excluir
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
